<!--pages/movie/movie.wxml-->
<view style="padding:0 20px">
	<image style="width:100%;height:500px;margin:auto" src="{{item.image}}">
	</image>
	<text class="tittle">{{item.name}}</text>
</view>

<view style="padding:20px">
	<view>
		<text>评分：{{item.point}}</text>
	</view>
	<view>
		<text>导演：{{item.director}}</text>
	</view>
	<view>
		<text>演员：{{item.actors}}</text>
	</view>
</view>
<view style="padding:20px">
	<view>
		<text style="font-size;20px;font-weight:bold">
简介：
</text>
	</view>
	<text>
	{{item.info}}
	</text>

</view>